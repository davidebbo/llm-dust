{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Install plugin",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["install", "-e", "."],
      "console": "integratedTerminal"
    },
    {
      "name": "List plugings",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["plugins"],
      "console": "integratedTerminal"
    },
    {
      "name": "List models",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["models"],
      "console": "integratedTerminal"
    },
    {
      "name": "List agents",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["dust-agents"],
      "console": "integratedTerminal"
    },
    {
      "name": "Prompt model",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["-m", "fruity", "What's the capital of France?"],
      "console": "integratedTerminal"
    },
    {
      "name": "Prompt attachment",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["-m", "fruity", "-a", "colors.txt", "What's in this file?"],
      "console": "integratedTerminal"
    },
    {
      "name": "Prompt attach continuation",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["-m", "fruity", "-c", "How many colors are there?"],
      "console": "integratedTerminal"
    },
    {
      "name": "Chat",
      "type": "debugpy",
      "request": "launch",
      "module": "llm",
      "args": ["chat", "-m", "fruity"],
      "console": "integratedTerminal"
    }
  ]
}
